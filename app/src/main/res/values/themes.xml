<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DataRescuePro" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/datarescue_primary</item>
        <item name="colorPrimaryVariant">@color/datarescue_primary_variant</item>
        <item name="colorOnPrimary">@color/datarescue_on_primary</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/datarescue_secondary</item>
        <item name="colorSecondaryVariant">@color/datarescue_secondary_variant</item>
        <item name="colorOnSecondary">@color/datarescue_on_secondary</item>
        
        <!-- Error color -->
        <item name="colorError">@color/datarescue_error</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/datarescue_surface</item>
        <item name="colorOnSurface">@color/datarescue_on_surface</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/datarescue_background</item>
        <item name="colorOnBackground">@color/datarescue_on_background</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/datarescue_primary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>
</resources>